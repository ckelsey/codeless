{
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "noImplicitAny": true,
        "baseUrl": "./src",
        "paths": {
            "*.scss": [
                "typings/scss.d.ts"
            ],
            "*.css": [
                "typings/css.d.ts"
            ],
            "*.html": [
                "typings/html.d.ts"
            ]
        }
    }
}