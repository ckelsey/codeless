{
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "noImplicitAny": true,
        "baseUrl": "./src"
    }
}